<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardviewMenu"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_menu"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:id="@+id/relative_menu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffff">

        <ImageView
            android:id="@+id/imageMenu"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:padding="3dp"
            android:src="@drawable/ic_action_ic_home"
            android:tint="@color/colorPrimaryDark" />

        <TextView
            android:id="@+id/texviewNombrMenu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/imagebuttom"
            android:layout_toRightOf="@+id/imageMenu"
            android:fontFamily="@font/opensanslight"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:text="Nombre del item del menu"
            android:textColor="#000000"
            android:textSize="14dp" />

        <ImageButton
            android:id="@+id/imagebuttom"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentRight="true"
            android:background="@color/colorTrasparente"
            android:src="@drawable/ic_action_ic_rightarrow"
            android:tint="#000000" />

        <TextView
            android:id="@+id/texviewDesItemMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5sp"
            android:fontFamily="@font/opensanslight"
            android:gravity="center"
            android:textColor="@android:color/darker_gray"
            android:visibility="gone" />
    </RelativeLayout>

</android.support.v7.widget.CardView>