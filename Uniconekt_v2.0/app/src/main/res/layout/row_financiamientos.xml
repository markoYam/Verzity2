<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/cardviewFinanciamiento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardElevation="3dp"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/Color_financiamientos">

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="#fff">

            <TextView
                android:id="@+id/textViewNombreFinanciamiento"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/Color_financiamientos"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"

                android:text="Nombre financiamiento"
                android:textColor="#ffff"
                android:textSize="16dp" />

            <ImageView
                android:id="@+id/imageViewFotoFinanciamiento"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/textViewNombreFinanciamiento"
                android:layout_margin="1dp"
                android:scaleType="fitCenter"
                android:src="@drawable/defaultt"
                android:transitionName="demo" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageViewFotoFinanciamiento"
                android:layout_marginTop="2dp"
                android:layout_toLeftOf="@id/buttonVerMas"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="5dp">

                    <TextView
                        android:id="@+id/autor"
                        android:layout_marginLeft="5sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Universidad que ofrece el financiamiento"
                        android:textColor="#000"
                        android:textSize="12dp"
                         />

                    <TextView
                        android:id="@+id/textViewNombreUniversidadFinanciamiento"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nombre Universidad"
                        android:textColor="#000"
                        android:layout_marginLeft="5sp"
                        android:textStyle="bold"
                        android:textSize="12dp" />
                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/buttonVerMas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/imageViewFotoFinanciamiento"
                android:text="@string/ver_m_s"
                android:theme="@style/buttonDesing_financiamiento" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>