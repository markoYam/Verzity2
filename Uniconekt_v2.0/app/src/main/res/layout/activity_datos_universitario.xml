<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/uvv_black"
    tools:context=".view.activity.Universitario.DatosUniversitarioActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/tolbar"></include>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardElevation="5dp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <RelativeLayout
                            android:layout_width="140dp"
                            android:layout_height="140dp"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="10dp">

                            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                                android:id="@+id/profile_Usuario"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/profile"
                                app:civ_border_color="#FFff"
                                app:civ_border_width="2dp" />

                            <android.support.design.widget.FloatingActionButton
                                android:id="@+id/fabPerfilUniverstario"
                                android:layout_width="wrap_content"
                                android:theme="@style/MyFloatingButton"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_alignParentRight="true"
                                android:backgroundTint="@color/colorPrimaryDark"
                                android:src="@drawable/ic_action_camera_enhance"
                                android:tint="#ffff"
                                app:fab_colorNormal="@color/colorPrimaryDark"
                                android:foregroundTint="@color/colorPrimaryDark"
                                app:fab_size="normal" />
                        </RelativeLayout>

                        <TextView
                            android:id="@+id/seccionVistaUniversidad"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="Datos generales"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            android:textColor="@color/colorPrimaryDark" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:src="@drawable/ic_action_ic_user"
                                android:tint="@color/colorGris" />

                            <android.support.design.widget.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:theme="@style/ThemeLayout">

                                <android.support.design.widget.TextInputEditText
                                    android:id="@+id/editTextNombre"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:hint="Nombre completo"
                                    android:imeOptions="actionNext"
                                    android:inputType="text"></android.support.design.widget.TextInputEditText>
                            </android.support.design.widget.TextInputLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:src="@drawable/ic_telefono"
                                android:tint="@color/colorGris" />

                            <android.support.design.widget.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:theme="@style/ThemeLayout"
                                app:counterEnabled="true"
                                app:counterMaxLength="10"
                                app:counterOverflowTextAppearance="@style/AppTheme.CharacterCounter">

                                <android.support.design.widget.TextInputEditText
                                    android:id="@+id/editTextTelefono"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:hint="Teléfono"
                                    android:imeOptions="actionNext"
                                    android:inputType="phone"
                                    android:maxLength="10"></android.support.design.widget.TextInputEditText>
                            </android.support.design.widget.TextInputLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:src="@drawable/ic_mail"
                                android:tint="@color/colorGris" />

                            <android.support.design.widget.TextInputLayout
                                android:layout_width="match_parent"
                                android:theme="@style/ThemeLayout"
                                android:layout_height="wrap_content">

                                <android.support.design.widget.TextInputEditText
                                    android:id="@+id/editTextCorreo"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:hint="Correo electrónico"
                                    android:imeOptions="actionNext"
                                    android:inputType="textEmailAddress"></android.support.design.widget.TextInputEditText>
                            </android.support.design.widget.TextInputLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:visibility="visible"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:src="@drawable/ic_action_licenciatura"
                                android:tint="@color/colorGris" />

                            <Spinner
                                android:id="@+id/spinnerLicenciaturas"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:visibility="gone"
                                android:tooltipText="País"></Spinner>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:src="@drawable/ic_action_pais"
                                android:tint="@color/colorGris" />

                            <Spinner
                                android:drawSelectorOnTop="true"
                                android:id="@+id/spinnerPaises"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:tooltipText="País"></Spinner>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:src="@drawable/ic_action_ic_school"
                                android:tint="@color/colorGris" />

                            <android.support.design.widget.TextInputLayout
                                android:id="@+id/layoutCodigo"
                                android:layout_width="match_parent"
                                android:theme="@style/ThemeLayout"
                                android:layout_height="wrap_content">

                                <android.support.design.widget.TextInputEditText
                                    android:id="@+id/editTexCodigo"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:maxLength="5"
                                    android:hint="Código postal"
                                    android:imeOptions="actionNext"
                                    android:inputType="number"></android.support.design.widget.TextInputEditText>
                            </android.support.design.widget.TextInputLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:src="@drawable/ic_action_estado"
                                android:tint="@color/colorGris" />

                            <android.support.design.widget.TextInputLayout
                                android:id="@+id/layoutEstado"
                                android:layout_width="match_parent"
                                android:theme="@style/ThemeLayout"
                                android:layout_height="wrap_content">

                                <android.support.design.widget.TextInputEditText
                                    android:id="@+id/editTextEstado"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:enabled="false"
                                    android:hint="Estado"
                                    android:imeOptions="actionNext"
                                    android:inputType="text"></android.support.design.widget.TextInputEditText>
                            </android.support.design.widget.TextInputLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:src="@drawable/ic_action_ciudad"
                                android:tint="@color/colorGris" />

                            <android.support.design.widget.TextInputLayout
                                android:id="@+id/layoutMunicipio"
                                android:layout_width="match_parent"
                                android:theme="@style/ThemeLayout"
                                android:layout_height="wrap_content">

                                <android.support.design.widget.TextInputEditText
                                    android:id="@+id/editTextMunicipio"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:enabled="false"
                                    android:hint="Municipio"
                                    android:imeOptions="actionNext"
                                    android:inputType="text"></android.support.design.widget.TextInputEditText>
                            </android.support.design.widget.TextInputLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:src="@drawable/ic_action_ciudad"
                                android:tint="@color/colorGris" />

                            <android.support.design.widget.TextInputLayout
                                android:id="@+id/layoutCiudad"
                                android:layout_width="match_parent"
                                android:theme="@style/ThemeLayout"
                                android:layout_height="wrap_content">

                                <android.support.design.widget.TextInputEditText
                                    android:id="@+id/editTextCiudad"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:enabled="false"
                                    android:hint="Ciudad"
                                    android:imeOptions="actionNext"
                                    android:inputType="text"></android.support.design.widget.TextInputEditText>
                            </android.support.design.widget.TextInputLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:src="@drawable/ic_action_ciudad"
                                android:tint="@color/colorGris" />

                            <android.support.design.widget.TextInputLayout
                                android:layout_width="match_parent"
                                android:theme="@style/ThemeLayout"
                                android:layout_height="wrap_content">

                                <android.support.design.widget.TextInputEditText
                                    android:id="@+id/edittextCalle"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:hint="Dirección"
                                    android:imeOptions="actionDone"
                                    android:inputType="text"></android.support.design.widget.TextInputEditText>
                            </android.support.design.widget.TextInputLayout>
                        </LinearLayout>

                        <Button
                            android:id="@+id/buttonRegistrousuario"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="5dp"
                            android:text="Continuar"
                            android:theme="@style/buttonDesing" />
                    </LinearLayout>

                </android.support.v7.widget.CardView>
            </LinearLayout>

        </ScrollView>
    </LinearLayout>

</RelativeLayout>