<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_menu"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff">

        <ImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/imageUniversidad"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerVertical="true"
            android:padding="5dp"
            android:src="@drawable/ic_programas_academicos"
            android:tint="@color/Color_programas" />

        <TextView
            android:id="@+id/texviewNombreItem"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/imagebuttom"
            android:layout_toRightOf="@+id/imageUniversidad"
            android:fontFamily="@font/opensanslight"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:text="Nombre del item"
            android:textColor="@color/uvv_black"
            android:textSize="16dp" />

        <ImageButton
            android:id="@+id/imagebuttom"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@color/colorTrasparente"
            android:src="@drawable/ic_action_ic_rightarrow"
            android:tint="@color/uvv_black" />
    </RelativeLayout>

</android.support.v7.widget.CardView>