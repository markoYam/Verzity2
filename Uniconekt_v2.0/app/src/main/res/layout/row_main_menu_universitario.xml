<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardviewMenu"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:minHeight="170sp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageMenu"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginTop="15sp"
            android:background="@drawable/item_menu_universidades"
            android:padding="10dp"
            android:src="@drawable/ic_search_2" />

        <TextView
            android:id="@+id/texviewNombrMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1sp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="1sp"
            android:fontFamily="@font/opensansbold"
            android:textAlignment="center"
            android:textStyle="bold" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="10sp"
            android:layout_marginRight="10sp"
            android:layout_marginBottom="10sp"
            android:background="@android:color/darker_gray" />

        <TextView
            android:id="@+id/texviewDesItemMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5sp"
            android:fontFamily="@font/opensanslight"
            android:gravity="center"
            android:textColor="@android:color/darker_gray" />

        <ImageButton
            android:id="@+id/imagebuttom"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:visibility="gone"></ImageButton>
    </LinearLayout>
</android.support.v7.widget.CardView>