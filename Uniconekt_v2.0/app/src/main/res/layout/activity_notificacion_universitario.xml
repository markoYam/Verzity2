<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/contenedor"
    app:cardBackgroundColor="@color/colorBlanco"
    app:cardCornerRadius="5dp"
    app:cardElevation="1dp"
    app:cardUseCompatPadding="true"
    tools:context=".view.activity.Universitario_v2.NotificacionUniversitarioActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageviewIcono"
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/modal" />

        <RelativeLayout
            android:id="@+id/contenedor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageviewIcono"
            android:minHeight="100sp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewFecha"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text=""
                    android:textAlignment="center"
                    android:textColor="@color/uvv_black"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/textViewTitulo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textViewFecha"
                    android:text="wewewewewe"
                    android:textAlignment="center"
                    android:textColor="@color/uvv_black"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/textViewMensaje"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textViewTitulo"
                    android:text="dfdff"
                    android:textAlignment="center" />
            </LinearLayout>

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/contenedor"
            android:layout_centerHorizontal="true">

            <Button
                android:id="@+id/buttonEvaluaciones"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/colorTrasparente"
                android:text="Ver cuestionarios"
                android:textColor="@color/Color_financiamientos"
                android:textSize="12sp" />

            <Button
                android:id="@+id/buttonPresentar"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/colorTrasparente"
                android:text="Presentar cuestionario"
                android:textColor="@color/Color_financiamientos"
                android:textSize="12sp" />
        </LinearLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>