<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/cardviewBeca"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardElevation="3dp"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/Color_becas"></RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:background="#ffff">

            <TextView
                android:id="@+id/textViewNombreBeca"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/Color_becas"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:text="Nombre beca"
                android:textColor="#ffffff"
                android:textSize="16dp" />

            <ImageView
                android:id="@+id/imageViewFotoBeca"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/textViewNombreBeca"
                android:layout_margin="1dp"
                android:scaleType="fitCenter"
                android:src="@drawable/defaultt"
                android:transitionName="demo" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageViewFotoBeca"
                android:layout_marginTop="2dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="5dp">

                    <TextView
                        android:id="@+id/autor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Universidad que ofrece la beca"
                        android:textColor="#000"
                        android:textSize="13dp" />

                    <TextView
                        android:id="@+id/textViewNombreUniversidadBeca"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nombre Universidad"
                        android:textColor="#000"
                        android:textStyle="bold"
                        android:textSize="14dp" />
                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/buttonVerMas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/imageViewFotoBeca"
                android:text="@string/ver_m_s"
                android:theme="@style/buttonDesing_beca" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>


</RelativeLayout>