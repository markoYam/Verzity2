<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/cardviewCupon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardElevation="3dp"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/Color_cupones">

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:background="#ffff">

            <TextView
                android:id="@+id/textViewNombreCupon"
                style="@style/TextAppearance.AppCompat.Widget.PopupMenu.Header"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/Color_cupones"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:text="Nombre Cupon"
                android:textAlignment="gravity"
                android:textColor="#ffff"
                android:textSize="16dp" />

            <ImageView
                android:id="@+id/imageViewFotoBCupon"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/textViewNombreCupon"
                android:layout_margin="1dp"
                android:scaleType="fitCenter"
                android:src="@drawable/defaultt"
                android:transitionName="demo" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageViewFotoBCupon">

                <TextView
                    android:id="@+id/textViewVencimiento"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingRight="5dp"
                    android:paddingLeft="5dp"
                    android:layout_toLeftOf="@id/buttonVerMasCupon" />

                <Button
                    android:id="@+id/buttonVerMasCupon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="@string/ver_m_s"
                    android:layout_centerVertical="true"
                    android:theme="@style/buttonDesing_cupon" />
            </RelativeLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>