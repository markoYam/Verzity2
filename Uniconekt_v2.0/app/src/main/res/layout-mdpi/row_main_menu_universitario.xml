<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardviewMenu"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:clickable="true"
    app:cardCornerRadius="5dp"
    android:layout_margin="2dp"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:id="@+id/relative_menu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ImageView
            android:id="@+id/imageMenu"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:padding="2dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_action_ic_home" />
        <TextView
            android:id="@+id/texviewNombrMenu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="5dp"
            android:textStyle="bold"
            android:text="Nombre del item del menu"
            android:textColor="#ffffff"
            android:textSize="20sp" />

        <ImageButton
            android:id="@+id/imagebuttom"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentRight="true"
            android:background="@color/colorTrasparente"
            android:tint="#000000"
            android:visibility="gone"
            android:src="@drawable/ic_action_ic_rightarrow" />
    </RelativeLayout>
</android.support.v7.widget.CardView>